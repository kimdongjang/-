<Window x:Class="Client.DragCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invisible Window"  Height="Auto" Width="Auto" WindowStyle="None" AllowsTransparency="True"
        ShowInTaskbar="True" Background="Transparent" Opacity="1"
        WindowState="Normal" ResizeMode="NoResize" 
        Topmost="True" Loaded="Window_Loaded">
    <Canvas x:Name="cvsMain" MouseDown="Canvas_MouseDown_1" MouseUp="Canvas_MouseUp" MouseMove="Canvas_MouseMove" 
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#10FFFFFF" IsHitTestVisible="True">
        <Rectangle x:Name="selRect" Width="100" Height="100" Stroke="RoyalBlue" StrokeThickness="2" Fill="#08005599" Visibility="Collapsed">

        </Rectangle>
    </Canvas>
</Window>
